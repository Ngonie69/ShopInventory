# ShopInventory Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to source control!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=shopinventory
POSTGRES_PASSWORD=YourSecurePassword123!
POSTGRES_DB=shopinventory
POSTGRES_DB_WEB=shopinventoryweb

# ===========================================
# API SECURITY
# ===========================================
# JWT Secret - Generate with: openssl rand -base64 64
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast64CharactersLongForProduction!@#$%^&*()

# API Key for service-to-service communication
API_KEY_MAIN=sk_live_ShopInventory_PRODUCTION_CHANGE_THIS_KEY!

# ===========================================
# SAP BUSINESS ONE CONFIGURATION
# ===========================================
SAP_SERVICE_URL=https://your-sap-server:50000/b1s/v1/
SAP_COMPANY_DB=YOUR_COMPANY_DB
SAP_USERNAME=sap_user
SAP_PASSWORD=sap_password

# ===========================================
# APPLICATION URLs
# ===========================================
WEB_APP_URL=https://your-domain.com
API_BASE_URL=http://shopinventory-api:5106/

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@your-domain.com

# ===========================================
# AI CONFIGURATION (Optional)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# PAYMENT GATEWAYS (Optional)
# ===========================================
# PayNow
PAYNOW_INTEGRATION_ID=
PAYNOW_INTEGRATION_KEY=

# InnBucks
INNBUCKS_API_KEY=
INNBUCKS_API_SECRET=
INNBUCKS_MERCHANT_ID=

# EcoCash
ECOCASH_API_KEY=
ECOCASH_API_SECRET=
ECOCASH_MERCHANT_CODE=
ECOCASH_MERCHANT_PIN=

# ===========================================
# REVMAX FISCAL (Optional)
# ===========================================
REVMAX_BASE_URL=
REVMAX_DEVICE_ID=
REVMAX_OPERATOR_ID=
