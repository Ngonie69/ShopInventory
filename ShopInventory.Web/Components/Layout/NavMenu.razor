<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Shop Inventory</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" @bind="collapseNavMenu" />

<div class="nav-scrollable" @onclick="CloseSidebar">
    <nav class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="invoices">
                        <span class="bi bi-receipt-nav-menu" aria-hidden="true"></span> Invoices
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="invoices/create">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Create Invoice
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inventory-transfers">
                        <span class="bi bi-arrow-left-right-nav-menu" aria-hidden="true"></span> Inventory Transfers
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="payments">
                        <span class="bi bi-cash-nav-menu" aria-hidden="true"></span> Payments
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="products">
                        <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Products
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="prices">
                        <span class="bi bi-tags-nav-menu" aria-hidden="true"></span> Price List
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reports">
                        <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Reports
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ai-assistant">
                        <span class="bi bi-robot-nav-menu" aria-hidden="true"></span> AI Assistant
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="sync-status">
                        <span class="bi bi-arrow-repeat-nav-menu" aria-hidden="true"></span> Sync Status
                    </NavLink>
                </div>

                <!-- Admin Only Section -->
                <AuthorizeView Roles="Admin" Context="adminContext">
                    <Authorized>
                        <hr class="mx-3 my-2" />
                        <div class="nav-item px-3">
                            <small class="text-muted px-2">Administration</small>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="users">
                                <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Users
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="user-management">
                                <span class="bi bi-shield-lock-nav-menu" aria-hidden="true"></span> Permissions &
                                Security
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="user-activity">
                                <span class="bi bi-activity-nav-menu" aria-hidden="true"></span> User Activity
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="audit-trail">
                                <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> Audit Trail
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="settings">
                                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false;

    private void CloseSidebar()
    {
        collapseNavMenu = false;
    }
}