@inherits LayoutComponentBase
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IThemeService ThemeService
@inject ILocalizationService L
@inject IJSRuntime JS
@implements IDisposable

<MudThemeProvider @ref="_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="staff-shell">
    <MudAppBar Elevation="1" Dense="true" Class="staff-appbar">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@ToggleDrawer" />
        <div class="staff-brand">
            <img src="images/kefalos-logo.jpg" alt="Kefalos" class="brand-logo" onerror="this.style.display='none'" />
            <MudText Typo="Typo.h6" Class="brand-title">Kefalos</MudText>
        </div>
        <MudSpacer />

        <LanguageSelector />
        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
            Color="Color.Inherit" OnClick="@ToggleTheme" aria-label="@(_isDarkMode ? "Light Mode" : "Dark Mode")" />

        <AuthorizeView>
            <Authorized>
                <MudText Class="mx-3" Style="color: white;">@L.Translate("common.welcome"), @context.User.Identity?.Name
                </MudText>
                <MudButton Variant="Variant.Outlined" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Logout"
                    OnClick="@Logout" Size="Size.Small">
                    @L.Translate("common.logout")
                </MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Login"
                    Href="/login" Size="Size.Small">
                    @L.Translate("common.login")
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true"
        ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Lg" Class="staff-drawer">
        <MudDrawerHeader Dense="true" Class="staff-drawer-header">
            <div class="drawer-brand">
                @if (_drawerOpen)
                {
                    <img src="images/kefalos-logo.jpg" alt="Kefalos" class="drawer-logo"
                        onerror="this.outerHTML='<span>Kefalos</span>'" />
                }
                else
                {
                    <MudIcon Icon="@Icons.Material.Filled.Inventory" Class="drawer-icon" />
                }
            </div>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="staff-main">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-4 staff-container">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider? _mudThemeProvider;

    protected override async Task OnInitializedAsync()
    {
        // Initialize theme
        var theme = await ThemeService.GetThemeAsync();
        _isDarkMode = theme == "dark";
        ThemeService.OnThemeChanged += OnThemeChanged;

        // Initialize localization
        await L.GetLanguageAsync();
        L.OnLanguageChanged += () => InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Sync theme from storage
            var theme = await ThemeService.GetThemeAsync();
            _isDarkMode = theme == "dark";
            StateHasChanged();
        }
    }

    private async void OnThemeChanged()
    {
        _isDarkMode = ThemeService.IsDarkMode;
        await InvokeAsync(StateHasChanged);
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
        await ThemeService.SetThemeAsync(_isDarkMode ? "dark" : "light");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeChanged;
    }
}