@page "/products"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IProductService ProductService
@inject IMasterDataCacheService MasterDataCache
@inject ILogger<Products> Logger
@rendermode InteractiveServer

<PageTitle>Products - Shop Inventory</PageTitle>

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-box-seam me-2"></i>Products</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-search me-2"></i>Search Products</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Warehouse *</label>
                    @if (isLoadingWarehouses)
                    {
                        <div class="d-flex align-items-center">
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span class="text-muted">Loading warehouses...</span>
                        </div>
                    }
                    else
                    {
                        <MudAutocomplete T="WarehouseDto" @bind-Value="selectedWarehouse" Label="Search warehouse..."
                            SearchFunc="SearchWarehousesAsync"
                            ToStringFunc="@(w => w == null ? string.Empty : $"{w.WarehouseCode} - {w.WarehouseName}")"
                            Dense="true" Variant="Variant.Outlined" Margin="Margin.Dense" ResetValueOnEmptyText="true"
                            ShowProgressIndicator="true" MaxItems="20" DebounceInterval="150" Class="mt-0">
                            <ItemTemplate>
                                <div class="d-flex flex-column">
                                    <span class="fw-semibold">@context.WarehouseCode</span>
                                    <small class="text-muted">@context.WarehouseName</small>
                                </div>
                            </ItemTemplate>
                            <NoItemsTemplate>
                                <div class="p-2 text-muted">
                                    <i class="bi bi-info-circle me-1"></i>No warehouses found
                                </div>
                            </NoItemsTemplate>
                        </MudAutocomplete>
                    }
                </div>
                <div class="col-md-4">
                    <label class="form-label">Barcode (Optional)</label>
                    <input type="text" class="form-control" @bind="barcode" placeholder="Scan or enter barcode" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="SearchProducts"
                        disabled="@(selectedWarehouse == null)">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                    @if (!string.IsNullOrWhiteSpace(barcode))
                    {
                        <button class="btn btn-success me-2" @onclick="SearchByBarcode"
                            disabled="@(selectedWarehouse == null)">
                            <i class="bi bi-upc-scan me-1"></i>Scan
                        </button>
                    }
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                        <i class="bi bi-x-circle me-1"></i>Clear
                    </button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-2">
                    <label class="form-label">Records per page</label>
                    <select class="form-select" @bind="pageSize" @bind:after="OnPageSizeChanged">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading products...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else if (products?.Any() == true)
    {
        <MudDataGrid T="ProductDto" Items="@products" SortMode="SortMode.Multiple" Filterable="true"
            QuickFilter="@_quickFilter" Hideable="true" RowClick="@OnRowClicked" Dense="true" Hover="true" Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Products in Warehouse: @selectedWarehouse?.WarehouseCode</MudText>
                <MudSpacer />
                <MudChip T="string" Color="Color.Primary" Size="Size.Small">@totalProducts products (@productsWithBatches
                    with batches)</MudChip>
                <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                    AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 ms-4"></MudTextField>
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.ItemCode" Title="Item Code">
                    <CellTemplate>
                        <MudText Typo="Typo.body2"><strong>@context.Item.ItemCode</strong></MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.ItemName" Title="Item Name" />
                <PropertyColumn Property="x => x.BarCode" Title="Barcode">
                    <CellTemplate>
                        <code>@context.Item.BarCode</code>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.ItemType" Title="Type" />
                <PropertyColumn Property="x => x.QuantityInStock" Title="In Stock">
                    <CellTemplate>
                        <MudText Typo="Typo.body2" Align="Align.End">@context.Item.QuantityInStock</MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.QuantityAvailable" Title="Available">
                    <CellTemplate>
                        <MudText Typo="Typo.body2" Color="Color.Success" Align="Align.End">@context.Item.QuantityAvailable
                        </MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.QuantityCommitted" Title="Committed">
                    <CellTemplate>
                        <MudText Typo="Typo.body2" Color="Color.Warning" Align="Align.End">@context.Item.QuantityCommitted
                        </MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.UoM" Title="UoM" />
                <TemplateColumn Title="Batches" Sortable="false" Filterable="false">
                    <CellTemplate>
                        @if (context.Item.ManagesBatches)
                        {
                            <MudChip T="string" Color="Color.Info" Size="Size.Small">@(context.Item.Batches?.Count ?? 0) batches
                            </MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Color="Color.Default" Size="Size.Small">N/A</MudChip>
                        }
                    </CellTemplate>
                </TemplateColumn>
                <TemplateColumn Title="Actions" Sortable="false" Filterable="false">
                    <CellTemplate>
                        <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Size="Size.Small"
                            OnClick="@(() => ViewProduct(context.Item))" />
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <div class="d-flex justify-content-between align-items-center px-4 py-2">
                    <MudText Typo="Typo.body2">Showing @products.Count products (Page @currentPage)</MudText>
                    <div>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" Class="me-2"
                            Disabled="@(currentPage <= 1)" OnClick="PreviousPage">
                            <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Size="Size.Small" /> Previous
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" Disabled="@(!hasMore)"
                            OnClick="NextPage">
                            Next
                            <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" />
                        </MudButton>
                    </div>
                </div>
            </PagerContent>
        </MudDataGrid>
    }
    else if (selectedWarehouse != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No products found in warehouse @selectedWarehouse.WarehouseCode.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Enter a warehouse code and click Search to view products.
        </div>
    }
</div>

<!-- Product Detail Modal -->
@if (selectedProduct != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@selectedProduct.ItemName</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Product Information</h6>
                            <p class="mb-1"><strong>Item Code:</strong> @selectedProduct.ItemCode</p>
                            <p class="mb-1"><strong>Barcode:</strong> <code>@selectedProduct.BarCode</code></p>
                            <p class="mb-1"><strong>Type:</strong> @selectedProduct.ItemType</p>
                            <p class="mb-0"><strong>UoM:</strong> @selectedProduct.UoM</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Stock Levels</h6>
                            <div class="row g-2">
                                <div class="col-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-2">
                                            <p class="mb-0 small text-muted">In Stock</p>
                                            <p class="mb-0 fw-bold">@selectedProduct.QuantityInStock</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-success bg-opacity-10">
                                        <div class="card-body text-center py-2">
                                            <p class="mb-0 small text-muted">Available</p>
                                            <p class="mb-0 fw-bold text-success">@selectedProduct.QuantityAvailable</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-warning bg-opacity-10">
                                        <div class="card-body text-center py-2">
                                            <p class="mb-0 small text-muted">Committed</p>
                                            <p class="mb-0 fw-bold text-warning">@selectedProduct.QuantityCommitted</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (selectedProduct.ManagesBatches && selectedProduct.Batches?.Any() == true)
                    {
                        <h6 class="text-muted">Batch Information</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Batch #</th>
                                        <th class="text-end">Quantity</th>
                                        <th>Status</th>
                                        <th>Expiry</th>
                                        <th>Manufacturing</th>
                                        <th>Location</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var batch in selectedProduct.Batches)
                                    {
                                        <tr>
                                            <td><strong>@batch.BatchNumber</strong></td>
                                            <td class="text-end">@batch.Quantity</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(batch.Status)">@batch.Status</span>
                                            </td>
                                            <td>@batch.ExpiryDate</td>
                                            <td>@batch.ManufacturingDate</td>
                                            <td>@batch.Location</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-primary">
                                        <td><strong>Total</strong></td>
                                        <td class="text-end"><strong>@selectedProduct.Batches.Sum(b => b.Quantity)</strong></td>
                                        <td colspan="4"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else if (selectedProduct.ManagesBatches)
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>This product manages batches, but no batches were found.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductDto>? products;
    private ProductDto? selectedProduct;
    private bool isLoading = false;
    private string? errorMessage;
    private int currentPage = 1;
    private int pageSize = 20;
    private bool hasMore = false;
    private int totalProducts = 0;
    private int productsWithBatches = 0;

    private string? barcode;
    private string _searchString = string.Empty;

    // Warehouse selection - stored in database for fast loading
    private List<WarehouseDto> warehouses = new();
    private WarehouseDto? selectedWarehouse;
    private bool isLoadingWarehouses = true;
    private bool _hasLoadedData = false;

    // Quick filter - filter globally across multiple columns with the same input
    private Func<ProductDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.ItemCode?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.ItemName?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.BarCode?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.ItemType?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.UoM?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        return false;
    };

    // Row click handler
    private void OnRowClicked(DataGridRowClickEventArgs<ProductDto> args)
    {
        ViewProduct(args.Item);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasLoadedData)
        {
            Logger.LogInformation("Products page: OnAfterRenderAsync - firstRender, starting data load");
            _hasLoadedData = true;
            await LoadWarehousesAsync();
            StateHasChanged();
        }
    }

    private async Task LoadWarehousesAsync()
    {
        Logger.LogInformation("Products page: LoadWarehousesAsync started");
        isLoadingWarehouses = true;
        try
        {
            Logger.LogDebug("Products page: Calling MasterDataCache.GetWarehousesAsync()");
            warehouses = await MasterDataCache.GetWarehousesAsync();
            Logger.LogInformation("Products page: Loaded {Count} warehouses", warehouses?.Count ?? 0);

            // Set default warehouse if available
            if (warehouses?.Any() == true)
            {
                var defaultWarehouse = warehouses.FirstOrDefault(w => w.WarehouseCode == "01")
                ?? warehouses.First();
                selectedWarehouse = defaultWarehouse;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Products page: Failed to load warehouses");
            errorMessage = $"Failed to load warehouses: {ex.Message}";
        }
        finally
        {
            isLoadingWarehouses = false;
            Logger.LogDebug("Products page: LoadWarehousesAsync completed, isLoadingWarehouses={IsLoading}", isLoadingWarehouses);
        }
    }

    private async Task<IEnumerable<WarehouseDto>> SearchWarehousesAsync(string searchText, CancellationToken
    cancellationToken)
    {
        // Return all warehouses if search is empty
        if (string.IsNullOrWhiteSpace(searchText))
        {
            return warehouses.Take(20);
        }

        // Filter warehouses based on search text
        return warehouses
        .Where(w =>
        (w.WarehouseCode?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
        (w.WarehouseName?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false))
        .Take(20);
    }

    private async Task SearchProducts()
    {
        if (selectedWarehouse == null)
            return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await ProductService.GetPagedProductsAsync(selectedWarehouse.WarehouseCode!, currentPage, pageSize);
            if (response != null)
            {
                products = response.Products;
                hasMore = response.HasMore;
                totalProducts = response.Count;
                productsWithBatches = products?.Count(p => p.ManagesBatches) ?? 0;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchByBarcode()
    {
        if (selectedWarehouse == null || string.IsNullOrWhiteSpace(barcode))
            return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var product = await ProductService.SearchProductByBarcodeAsync(barcode, selectedWarehouse.WarehouseCode!);
            if (product != null)
            {
                products = new List<ProductDto> { product };
                totalProducts = 1;
                productsWithBatches = product.ManagesBatches ? 1 : 0;
                hasMore = false;
            }
            else
            {
                errorMessage = "Product not found with the specified barcode.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearSearch()
    {
        // Reset warehouse to default
        if (warehouses?.Any() == true)
        {
            var defaultWarehouse = warehouses.FirstOrDefault(w => w.WarehouseCode == "01")
            ?? warehouses.First();
            selectedWarehouse = defaultWarehouse;
        }
        else
        {
            selectedWarehouse = null;
        }

        barcode = null;
        products = null;
        currentPage = 1;
    }

    private void ViewProduct(ProductDto product)
    {
        selectedProduct = product;
    }

    private void CloseModal()
    {
        selectedProduct = null;
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status?.ToLower() switch
        {
            "released" => "bg-success",
            "not accessible" => "bg-warning",
            "locked" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await SearchProducts();
        }
    }

    private async Task NextPage()
    {
        if (hasMore)
        {
            currentPage++;
            await SearchProducts();
        }
    }

    private async Task OnPageSizeChanged()
    {
        currentPage = 1;
        await SearchProducts();
    }
}