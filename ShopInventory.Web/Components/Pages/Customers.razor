@page "/customers"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IBusinessPartnerService BusinessPartnerService
@inject HttpClient Http
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Customers - Shop Inventory</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people me-2"></i>Customers</h2>
        <div class="d-flex align-items-center gap-2">
            @if (lastSyncTime.HasValue)
            {
                <small class="text-muted me-2">
                    <i class="bi bi-clock-history me-1"></i>Last sync: @lastSyncTime.Value.ToLocalTime().ToString("g")
                </small>
            }
            <button class="btn btn-outline-secondary btn-sm" @onclick="RefreshFromApi" disabled="@isSyncing">
                @if (isSyncing)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                    <span>Syncing...</span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    <span>Refresh</span>
                }
            </button>
            <div class="btn-group">
                <button class="btn @(selectedType == "C" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => FilterByType("C")'>
                    Customers
                </button>
                <button class="btn @(selectedType == "S" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => FilterByType("S")'>
                    Suppliers
                </button>
                <button class="btn @(selectedType == "" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => FilterByType("")'>
                    All
                </button>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput"
                            @onkeyup="OnSearchKeyUp" placeholder="Search by code, name, or email..." />
                        <button class="btn btn-primary" @onclick="SearchCustomers">
                            Search
                        </button>
                        @if (!string.IsNullOrEmpty(searchTerm))
                        {
                            <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        }
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    @if (customers != null)
                    {
                        <span class="text-muted">Showing @customers.Count of @totalCount customers</span>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading customers...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else if (customers?.Any() == true)
    {
        <MudDataGrid T="BusinessPartnerDto" Items="@customers" SortMode="SortMode.Multiple" Filterable="true"
            QuickFilter="@_quickFilter" Hideable="true" RowClick="@OnCustomerRowClicked" Dense="true" Hover="true"
            Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Customers</MudText>
                <MudSpacer />
                <MudChip T="string" Color="Color.Primary" Size="Size.Small">@totalCount total</MudChip>
                <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                    AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 ms-4"></MudTextField>
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="x => x.CardCode" Title="Code">
                    <CellTemplate>
                        <MudText Typo="Typo.body2"><strong>@context.Item.CardCode</strong></MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.CardName" Title="Name" />
                <PropertyColumn Property="x => x.CardType" Title="Type">
                    <CellTemplate>
                        <MudChip T="string" Color="@GetTypeChipColor(context.Item.CardType)" Size="Size.Small">
                            @GetTypeLabel(context.Item.CardType)
                        </MudChip>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.Email" Title="Contact">
                    <CellTemplate>
                        @if (!string.IsNullOrEmpty(context.Item.Email))
                        {
                            <a href="mailto:@context.Item.Email" class="text-decoration-none">
                                <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" Class="me-1" />
                                @context.Item.Email
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(context.Item.Phone1))
                        {
                            <MudText Typo="Typo.caption" Class="d-block text-muted">
                                <MudIcon Icon="@Icons.Material.Filled.Phone" Size="Size.Small" Class="me-1" />
                                @context.Item.Phone1
                            </MudText>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.City" Title="Location">
                    <CellTemplate>
                        @if (!string.IsNullOrEmpty(context.Item.City) || !string.IsNullOrEmpty(context.Item.Country))
                        {
                            <span>@context.Item.City @context.Item.Country</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.Currency" Title="Currency">
                    <CellTemplate>
                        @(context.Item.Currency ?? "USD")
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.Balance" Title="Balance">
                    <CellTemplate>
                        <MudText Typo="Typo.body2" Align="Align.End"
                            Color="@(context.Item.Balance > 0 ? Color.Error : Color.Success)">
                            @((context.Item.Balance ?? 0).ToString("N2"))
                        </MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x => x.IsActive" Title="Status">
                    <CellTemplate>
                        @if (context.Item.IsActive)
                        {
                            <MudChip T="string" Color="Color.Success" Size="Size.Small">Active</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Color="Color.Default" Size="Size.Small">Inactive</MudChip>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <TemplateColumn Title="Actions" Sortable="false" Filterable="false">
                    <CellTemplate>
                        <MudButtonGroup Size="Size.Small" Variant="Variant.Outlined">
                            <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Size="Size.Small"
                                OnClick="@(() => ViewCustomer(context.Item))" Title="View Details" />
                            <MudIconButton Icon="@Icons.Material.Filled.Receipt" Color="Color.Info" Size="Size.Small"
                                OnClick="@(() => NavigateToInvoices(context.Item.CardCode ?? string.Empty))"
                                Title="View Invoices" />
                        </MudButtonGroup>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="BusinessPartnerDto" />
            </PagerContent>
        </MudDataGrid>

        <!-- Summary Stats -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4>@customers.Count(c => c.CardType == "C")</h4>
                        <small class="text-muted">Customers</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4>@customers.Count(c => c.CardType == "S")</h4>
                        <small class="text-muted">Suppliers</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4>@customers.Count(c => c.IsActive)</h4>
                        <small class="text-muted">Active</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4>@customers.Where(c => c.Balance > 0).Sum(c => c.Balance ?? 0).ToString("N0")</h4>
                        <small class="text-muted">Total Outstanding</small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No customers found. Try adjusting your search criteria.
        </div>
    }
</div>

<!-- View Customer Modal -->
@if (selectedCustomer != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-badge me-2"></i>@selectedCustomer.CardName
                    </h5>
                    <button type="button" class="btn-close" @onclick="() => selectedCustomer = null"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted">Generate Statement</h6>
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <FlexibleDatePicker Label="From Date" Date="statementFromDate"
                                        DateChanged="(d) => statementFromDate = d ?? DateTime.Now.AddMonths(-3)" />
                                </div>
                                <div class="col-md-5">
                                    <FlexibleDatePicker Label="To Date" Date="statementToDate"
                                        DateChanged="(d) => statementToDate = d ?? DateTime.Now" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">General Information</h6>
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Code</th>
                                    <td>@selectedCustomer.CardCode</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>@selectedCustomer.CardName</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>
                                        <span class="badge @GetTypeBadgeClass(selectedCustomer.CardType)">
                                            @GetTypeLabel(selectedCustomer.CardType)
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Group Code</th>
                                    <td>@(selectedCustomer.GroupCode ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        @if (selectedCustomer.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Contact Information</h6>
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Email</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(selectedCustomer.Email))
                                        {
                                            <a href="mailto:@selectedCustomer.Email">@selectedCustomer.Email</a>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Phone 1</th>
                                    <td>@(selectedCustomer.Phone1 ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Phone 2</th>
                                    <td>@(selectedCustomer.Phone2 ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>@(selectedCustomer.Address ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>City/Country</th>
                                    <td>@selectedCustomer.City @selectedCustomer.Country</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Financial Information</h6>
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Currency</th>
                                    <td>@(selectedCustomer.Currency ?? "USD")</td>
                                </tr>
                                <tr>
                                    <th>Balance</th>
                                    <td class="@(selectedCustomer.Balance > 0 ? "text-danger fw-bold" : "text-success")">
                                        @((selectedCustomer.Balance ?? 0).ToString("N2"))
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning"
                        @onclick="() => GenerateStatement(selectedCustomer.CardCode ?? string.Empty)"
                        disabled="@isGeneratingStatement">
                        @if (isGeneratingStatement)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Generating...</span>
                        }
                        else
                        {
                            <i class="bi bi-file-pdf me-1"></i>
                            <span>Generate Statement</span>
                        }
                    </button>
                    <button type="button" class="btn btn-info"
                        @onclick='() => NavigateToInvoices(selectedCustomer.CardCode ?? "")'>
                        <i class="bi bi-receipt me-1"></i>View Invoices
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="() => selectedCustomer = null">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@inject NavigationManager NavigationManager

@code {
    private List<BusinessPartnerDto>? customers;
    private BusinessPartnerDto? selectedCustomer;
    private bool isLoading = true;
    private bool isGeneratingStatement = false;
    private bool isSyncing = false;
    private string? errorMessage;
    private string searchTerm = "";
    private string selectedType = "";
    private int totalCount = 0;
    private DateTime statementFromDate = DateTime.Now.AddMonths(-3);
    private DateTime statementToDate = DateTime.Now;
    private DateTime? lastSyncTime;
    private string _searchString = string.Empty;

    // Quick filter - filter globally across multiple columns with the same input
    private Func<BusinessPartnerDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.CardCode?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.CardName?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Email?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Phone1?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.City?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        if (x.Country?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;

        return false;
    };

    // Row click handler
    private void OnCustomerRowClicked(DataGridRowClickEventArgs<BusinessPartnerDto> args)
    {
        ViewCustomer(args.Item);
    }

    // Helper for chip color
    private Color GetTypeChipColor(string? type) => type switch
    {
        "C" => Color.Primary,
        "S" => Color.Success,
        "L" => Color.Info,
        _ => Color.Default
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
        lastSyncTime = await BusinessPartnerService.GetLastSyncTimeAsync();
    }

    private async Task LoadCustomers()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            BusinessPartnerListResponse? response;

            // Use cached data from local database for fast filtering
            if (!string.IsNullOrEmpty(searchTerm))
            {
                response = await BusinessPartnerService.SearchCachedBusinessPartnersAsync(searchTerm);
            }
            else
            {
                response = await BusinessPartnerService.GetCachedBusinessPartnersAsync();
            }

            if (response != null)
            {
                var filteredPartners = response.BusinessPartners;

                // Apply type filter client-side (works with or without search)
                if (!string.IsNullOrEmpty(selectedType))
                {
                    filteredPartners = filteredPartners?.Where(p => p.CardType == selectedType).ToList();
                }

                customers = filteredPartners;
                totalCount = customers?.Count ?? 0;
            }
            else
            {
                // Fallback to API if cache is empty
                errorMessage = "No cached data found. Click Refresh to sync from server.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshFromApi()
    {
        isSyncing = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var count = await BusinessPartnerService.SyncBusinessPartnersAsync();
            lastSyncTime = DateTime.UtcNow;
            await LoadCustomers();
        }
        catch (Exception ex)
        {
            errorMessage = $"Sync failed: {ex.Message}";
        }
        finally
        {
            isSyncing = false;
        }
    }

    private async Task FilterByType(string type)
    {
        selectedType = type;
        await LoadCustomers();
    }

    private async Task SearchCustomers()
    {
        await LoadCustomers();
    }

    private async Task ClearSearch()
    {
        searchTerm = "";
        await LoadCustomers();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchCustomers();
        }
    }

    private void ViewCustomer(BusinessPartnerDto customer)
    {
        selectedCustomer = customer;
    }

    private void NavigateToInvoices(string cardCode)
    {
        selectedCustomer = null;
        NavigationManager.NavigateTo($"/invoices?customer={cardCode}");
    }

    private string GetTypeBadgeClass(string? type) => type switch
    {
        "C" => "bg-primary",
        "S" => "bg-success",
        "L" => "bg-info",
        _ => "bg-secondary"
    };

    private string GetTypeLabel(string? type) => type switch
    {
        "C" => "Customer",
        "S" => "Supplier",
        "L" => "Lead",
        _ => "Unknown"
    };

    private async Task GenerateStatement(string cardCode)
    {
        isGeneratingStatement = true;
        try
        {
            var fromDate = statementFromDate.ToString("yyyy-MM-dd");
            var toDate = statementToDate.ToString("yyyy-MM-dd");
            var response = await Http.GetAsync($"api/statement/generate/{cardCode}?fromDate={fromDate}&toDate={toDate}");
            if (response.IsSuccessStatusCode)
            {
                var fileBytes = await response.Content.ReadAsByteArrayAsync();
                var fileName = $"Statement_{cardCode}_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";

                // Convert to base64 for JS interop (same pattern as Kefalos-Workshop)
                var base64 = Convert.ToBase64String(fileBytes);
                await JS.InvokeVoidAsync("downloadFile", fileName, base64);
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to generate statement: {response.StatusCode} - {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error generating statement: {ex.Message}";
        }
        finally
        {
            isGeneratingStatement = false;
        }
    }

    private async Task TriggerFileDownload(byte[] fileBytes, string fileName, string mimeType)
    {
        // For Blazor Server, we can use direct download approach
        var module = await Http.GetAsync($"javascript:void(0)");
    }
}