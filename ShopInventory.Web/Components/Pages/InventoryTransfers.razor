@page "/inventory-transfers"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IInventoryTransferService TransferService
@inject IMasterDataCacheService CacheService
@inject ILogger<InventoryTransfers> Logger
@rendermode InteractiveServer

<style>
    .spin {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
        z-index: 9999;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
    }

    .loading-overlay .spinner-border {
        width: 4rem;
        height: 4rem;
        border-width: 0.4em;
    }

    .loading-overlay p {
        margin-top: 1rem;
        font-size: 1.25rem;
        font-weight: 500;
    }
</style>

@if (isConverting)
{
    <div class="loading-overlay">
        <div class="spinner-border text-light" role="status">
            <span class="visually-hidden">Converting...</span>
        </div>
        <p>Converting Transfer Request...</p>
        <small class="text-white-50">Please wait while the transfer is being created</small>
    </div>
}

<PageTitle>Inventory Transfers - Shop Inventory</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-arrow-left-right me-2"></i>Inventory Transfers</h2>
        <div class="btn-group">
            <a href="/inventory-transfer/create" class="btn btn-primary">
                <i class="bi bi-arrow-left-right me-1"></i>Create Transfer
            </a>
            <a href="/transfer-request/create" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-plus me-1"></i>Create Request
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "transfers" ? "active" : "")"
                @onclick="@(() => SwitchTab("transfers"))">
                <i class="bi bi-arrow-left-right me-1"></i>Completed Transfers
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "requests" ? "active" : "")"
                @onclick="@(() => SwitchTab("requests"))">
                <i class="bi bi-file-earmark-text me-1"></i>Transfer Requests
                @if (transferRequestCount > 0)
                {
                    <span class="badge bg-primary ms-1">@transferRequestCount</span>
                }
            </button>
        </li>
    </ul>

    @if (activeTab == "transfers")
    {
        <!-- Completed Transfers Tab -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Warehouse *</label>
                        @if (isLoadingWarehouses)
                        {
                            <div class="d-flex align-items-center">
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span class="text-muted">Loading warehouses...</span>
                            </div>
                        }
                        else
                        {
                            <MudAutocomplete T="WarehouseDto" @bind-Value="selectedWarehouse" Label="Search warehouse..."
                                SearchFunc="SearchWarehousesAsync"
                                ToStringFunc="@(w => w == null ? string.Empty : $"{w.WarehouseCode} - {w.WarehouseName}")"
                                Dense="true" Variant="Variant.Outlined" Margin="Margin.Dense" ResetValueOnEmptyText="true"
                                ShowProgressIndicator="true" MaxItems="20" DebounceInterval="150" Class="mt-0">
                                <ItemTemplate>
                                    <div class="d-flex flex-column">
                                        <span class="fw-semibold">@context.WarehouseCode</span>
                                        <small class="text-muted">@context.WarehouseName</small>
                                    </div>
                                </ItemTemplate>
                                <NoItemsTemplate>
                                    <div class="p-2 text-muted">
                                        <i class="bi bi-info-circle me-1"></i>No warehouses found
                                    </div>
                                </NoItemsTemplate>
                            </MudAutocomplete>
                        }
                    </div>
                    <div class="col-md-3">
                        <FlexibleDatePicker Label="From Date" @bind-Date="fromDate" />
                    </div>
                    <div class="col-md-3">
                        <FlexibleDatePicker Label="To Date" @bind-Date="toDate" />
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-primary me-2" @onclick="LoadTransfers"
                            disabled="@(selectedWarehouse == null)">
                            <i class="bi bi-search me-1"></i>Search
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="ClearFilter">
                            <i class="bi bi-x-circle me-1"></i>Clear
                        </button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label class="form-label">Records per page</label>
                        <select class="form-select" @bind="pageSize" @bind:after="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading transfers...</p>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
            </div>
        }
        else if (transfers?.Any() == true)
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Transfers to Warehouse: @selectedWarehouse?.WarehouseCode</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Doc Entry</th>
                                    <th>Doc #</th>
                                    <th>From Warehouse</th>
                                    <th>To Warehouse</th>
                                    <th>Date</th>
                                    <th>Due Date</th>
                                    <th>Items</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transfer in transfers)
                                {
                                    <tr>
                                        <td>@transfer.DocEntry</td>
                                        <td><strong>@transfer.DocNum</strong></td>
                                        <td><span class="badge bg-warning text-dark">@transfer.FromWarehouse</span></td>
                                        <td><span class="badge bg-success">@transfer.ToWarehouse</span></td>
                                        <td>@FormatDate(transfer.DocDate)</td>
                                        <td>@FormatDate(transfer.DueDate)</td>
                                        <td>@(transfer.Lines?.Count ?? 0) items</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewTransfer(transfer)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            Showing @transfers.Count transfers (Page @currentPage)
                        </div>
                        <div>
                            <button class="btn btn-outline-primary btn-sm me-2" @onclick="PreviousPage"
                                disabled="@(currentPage <= 1)">
                                <i class="bi bi-chevron-left"></i> Previous
                            </button>
                            <button class="btn btn-outline-primary btn-sm" @onclick="NextPage" disabled="@(!hasMore)">
                                Next <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (selectedWarehouse != null)
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No inventory transfers found for warehouse
                @selectedWarehouse.WarehouseCode.
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>Select a warehouse and click Search to view inventory transfers.
            </div>
        }
    }
    else
    {
        <!-- Transfer Requests Tab -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Transfer Requests</h5>
                <div>
                    <button class="btn btn-sm btn-outline-secondary me-2" @onclick="RefreshTransferRequests"
                        disabled="@isLoadingRequests">
                        <i class="bi bi-arrow-clockwise @(isLoadingRequests ? "spin" : "")"></i>
                    </button>
                    <a href="/transfer-request/create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus me-1"></i>New Request
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (isLoadingRequests)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-2 text-muted">Loading transfer requests...</p>
                    </div>
                }
                else if (transferRequests?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Doc #</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Date</th>
                                    <th>Requester</th>
                                    <th>Status</th>
                                    <th>Items</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in transferRequests)
                                {
                                    <tr>
                                        <td><strong>@request.DocNum</strong></td>
                                        <td><span class="badge bg-warning text-dark">@request.FromWarehouse</span></td>
                                        <td><span class="badge bg-success">@request.ToWarehouse</span></td>
                                        <td>@FormatDate(request.DocDate)</td>
                                        <td>@(request.RequesterName ?? "-")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(request.DocumentStatus)">
                                                @(request.DocumentStatus ?? "Open")
                                            </span>
                                        </td>
                                        <td>@(request.Lines?.Count ?? 0)</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary"
                                                    @onclick="() => ViewTransferRequest(request)" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (IsRequestConvertible(request))
                                                {
                                                    <button class="btn btn-outline-success" @onclick="() => ConvertRequest(request)"
                                                        disabled="@isConverting" title="Convert to Transfer">
                                                        <i class="bi bi-arrow-left-right"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>Showing @transferRequests.Count requests (Page @requestPage)</div>
                        <div>
                            <button class="btn btn-outline-primary btn-sm me-2" @onclick="PreviousRequestPage"
                                disabled="@(requestPage <= 1)">
                                <i class="bi bi-chevron-left"></i> Previous
                            </button>
                            <button class="btn btn-outline-primary btn-sm" @onclick="NextRequestPage"
                                disabled="@(!hasMoreRequests)">
                                Next <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-2 text-muted">No transfer requests found</p>
                        <a href="/transfer-request/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Create First Request
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Transfer Detail Modal -->
