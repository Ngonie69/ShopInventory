@code {
    // Tab state
    private string activeTab = "transfers";

    // Completed transfers
    private List<InventoryTransferDto>? transfers;
    private InventoryTransferDto? selectedTransfer;
    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;
    private int currentPage = 1;
    private int pageSize = 20;
    private bool hasMore = false;

    // Transfer requests
    private List<InventoryTransferRequestDto>? transferRequests;
    private InventoryTransferRequestDto? selectedTransferRequest;
    private bool isLoadingRequests = false;
    private bool isConverting = false;
    private int requestPage = 1;
    private bool hasMoreRequests = false;
    private int transferRequestCount = 0;

    // Warehouse search
    private bool isLoadingWarehouses = true;
    private List<WarehouseDto> cachedWarehouses = new();
    private WarehouseDto? selectedWarehouse;

    private DateTime? fromDate;
    private DateTime? toDate;

    private bool _hasLoadedData = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasLoadedData)
        {
            Logger.LogInformation("InventoryTransfers page: OnAfterRenderAsync - firstRender, starting data load");
            _hasLoadedData = true;
            await LoadWarehousesAsync();
            await LoadTransferRequestsAsync(); // Load transfer requests to get count
            StateHasChanged();
        }
    }

    private async Task LoadWarehousesAsync()
    {
        Logger.LogInformation("InventoryTransfers page: LoadWarehousesAsync started");
        try
        {
            isLoadingWarehouses = true;
            Logger.LogDebug("InventoryTransfers page: Calling CacheService.GetWarehousesAsync()");
            cachedWarehouses = await CacheService.GetWarehousesAsync();
            Logger.LogInformation("InventoryTransfers page: Loaded {Count} warehouses", cachedWarehouses?.Count ?? 0);

            // Pre-select warehouse "01" if it exists
            if (cachedWarehouses != null)
            {
                var defaultWarehouse = cachedWarehouses.FirstOrDefault(w => w.WarehouseCode == "01");
                if (defaultWarehouse != null)
                {
                    selectedWarehouse = defaultWarehouse;
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "InventoryTransfers page: Failed to load warehouses");
            errorMessage = $"Failed to load warehouses: {ex.Message}";
        }
        finally
        {
            isLoadingWarehouses = false;
            Logger.LogDebug("InventoryTransfers page: LoadWarehousesAsync completed");
        }
    }

    private async Task<IEnumerable<WarehouseDto>> SearchWarehousesAsync(string searchText, CancellationToken
    cancellationToken)
    {
        // Return all warehouses if search is empty
        if (string.IsNullOrWhiteSpace(searchText))
        {
            return cachedWarehouses.Take(20);
        }

        // Filter warehouses based on search text
        return cachedWarehouses
        .Where(w =>
        (w.WarehouseCode?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
        (w.WarehouseName?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false))
        .Take(20);
    }

    private string FormatDate(string? dateString)
    {
        if (string.IsNullOrEmpty(dateString))
            return "-";

        if (DateTime.TryParse(dateString, out var date))
        {
            return date.ToString("dd MMM yyyy");
        }

        return dateString;
    }

    private async Task LoadTransfers()
    {
        if (selectedWarehouse == null)
            return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var warehouseCode = selectedWarehouse.WarehouseCode!;

            if (fromDate.HasValue && toDate.HasValue)
            {
                var response = await TransferService.GetTransfersByDateRangeAsync(warehouseCode, fromDate.Value, toDate.Value);
                transfers = response?.Transfers;
                hasMore = false;
            }
            else if (fromDate.HasValue)
            {
                var response = await TransferService.GetTransfersByDateAsync(warehouseCode, fromDate.Value);
                transfers = response?.Transfers;
                hasMore = false;
            }
            else
            {
                var response = await TransferService.GetPagedTransfersAsync(warehouseCode, currentPage, pageSize);
                if (response != null)
                {
                    transfers = response.Transfers;
                    hasMore = response.HasMore;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilter()
    {
        selectedWarehouse = null;
        fromDate = null;
        toDate = null;
        currentPage = 1;
        transfers = null;

        // Re-select default warehouse
        var defaultWarehouse = cachedWarehouses?.FirstOrDefault(w => w.WarehouseCode == "01");
        if (defaultWarehouse != null)
        {
            selectedWarehouse = defaultWarehouse;
        }
    }

    private void ViewTransfer(InventoryTransferDto transfer)
    {
        selectedTransfer = transfer;
    }

    private void CloseModal()
    {
        selectedTransfer = null;
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadTransfers();
        }
    }

    private async Task NextPage()
    {
        if (hasMore)
        {
            currentPage++;
            await LoadTransfers();
        }
    }

    private async Task OnPageSizeChanged()
    {
        currentPage = 1;
        await LoadTransfers();
    }

    #region Transfer Request Methods

    private async Task SwitchTab(string tab)
    {
        activeTab = tab;
        if (tab == "requests" && transferRequests == null)
        {
            await LoadTransferRequestsAsync();
        }
    }

    private async Task LoadTransferRequestsAsync()
    {
        isLoadingRequests = true;
        try
        {
            var response = await TransferService.GetTransferRequestsAsync(requestPage, pageSize);
            if (response != null)
            {
                transferRequests = response.TransferRequests;
                hasMoreRequests = response.HasMore;
                transferRequestCount = response.Count;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load transfer requests");
        }
        finally
        {
            isLoadingRequests = false;
        }
    }

    private void ViewTransferRequest(InventoryTransferRequestDto request)
    {
        selectedTransferRequest = request;
    }

    private void CloseRequestModal()
    {
        selectedTransferRequest = null;
    }

    private async Task PreviousRequestPage()
    {
        if (requestPage > 1)
        {
            requestPage--;
            await LoadTransferRequestsAsync();
        }
    }

    private async Task NextRequestPage()
    {
        if (hasMoreRequests)
        {
            requestPage++;
            await LoadTransferRequestsAsync();
        }
    }

    private async Task RefreshTransferRequests()
    {
        requestPage = 1;
        await LoadTransferRequestsAsync();
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status?.ToLower() switch
        {
            "open" or "bost_open" => "bg-info",
            "closed" or "bost_close" => "bg-secondary",
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "pending" => "bg-warning text-dark",
            _ => "bg-info"
        };
    }

    private bool IsRequestConvertible(InventoryTransferRequestDto? request)
    {
        if (request == null) return false;

        // Check if the request is open (can be converted)
        var status = request.DocumentStatus?.ToLower();
        return status == null || status == "open" || status == "bost_open";
    }

    private async Task ConvertRequest(InventoryTransferRequestDto request)
    {
        if (request == null) return;

        isConverting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            Logger.LogInformation("Converting transfer request {DocEntry} to inventory transfer", request.DocEntry);

            var (success, message, transfer) = await TransferService.ConvertTransferRequestToTransferAsync(request.DocEntry);

            if (success)
            {
                successMessage = message;
                Logger.LogInformation("Transfer request {RequestDocEntry} converted to transfer {TransferDocEntry}",
                request.DocEntry, transfer?.DocEntry);

                // Close the modal
                CloseRequestModal();

                // Refresh the transfer requests list
                await LoadTransferRequestsAsync();

                // Switch to the transfers tab if desired
                // await SwitchTab("transfers");
            }
            else
            {
                errorMessage = message;
                Logger.LogWarning("Failed to convert transfer request: {Message}", message);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error converting transfer request {DocEntry}", request.DocEntry);
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isConverting = false;
            StateHasChanged();
        }
    }

    #endregion

