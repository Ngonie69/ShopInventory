@page "/webhooks"
@inject IWebhookService WebhookService
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<PageTitle>Webhooks - Shop Inventory</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-broadcast me-2"></i>Webhook Subscriptions</h2>
        <button class="btn btn-primary" @onclick="() => ShowCreateModal()">
            <i class="bi bi-plus-circle me-2"></i>Add Webhook
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading webhooks...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else if (webhooks?.Any() == true)
    {
        <div class="row">
            @foreach (var webhook in webhooks)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 @(webhook.IsActive ? "" : "border-secondary")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">@webhook.Name</h5>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" checked="@webhook.IsActive"
                                    @onchange="() => ToggleWebhook(webhook)" />
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <i class="bi bi-link-45deg me-1"></i>
                                <code class="small">@TruncateUrl(webhook.Url, 50)</code>
                            </p>

                            <div class="mb-3">
                                <strong>Events:</strong>
                                <div class="mt-1">
                                    @foreach (var evt in webhook.Events.Take(4))
                                    {
                                        <span class="badge bg-info me-1 mb-1">@evt</span>
                                    }
                                    @if (webhook.Events.Count > 4)
                                    {
                                        <span class="badge bg-secondary">+@(webhook.Events.Count - 4) more</span>
                                    }
                                </div>
                            </div>

                            <div class="row text-center small">
                                <div class="col-4">
                                    <span class="text-success fw-bold">@webhook.SuccessCount</span>
                                    <br /><span class="text-muted">Success</span>
                                </div>
                                <div class="col-4">
                                    <span class="text-danger fw-bold">@webhook.FailureCount</span>
                                    <br /><span class="text-muted">Failed</span>
                                </div>
                                <div class="col-4">
                                    <span class="fw-bold">@webhook.RetryCount</span>
                                    <br /><span class="text-muted">Retries</span>
                                </div>
                            </div>

                            @if (webhook.LastTriggeredAt.HasValue)
                            {
                                <hr />
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    Last triggered: @webhook.LastTriggeredAt.Value.ToString("dd MMM HH:mm")
                                </small>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group btn-group-sm w-100">
                                <button class="btn btn-outline-primary" @onclick="() => TestWebhook(webhook.Id)"
                                    disabled="@(!webhook.IsActive || isTesting)">
                                    @if (isTesting && testingWebhookId == webhook.Id)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <i class="bi bi-send me-1"></i>Test
                                </button>
                                <button class="btn btn-outline-info" @onclick="() => ShowDeliveries(webhook)">
                                    <i class="bi bi-list-ul me-1"></i>Logs
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="() => EditWebhook(webhook)">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </button>
                                <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(webhook)">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No webhooks configured. Add a webhook to receive event notifications.
        </div>
    }

    <!-- Available Events Reference -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Available Events</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var evt in WebhookEvents.All)
                {
                    <div class="col-md-3 col-6 mb-2">
                        <code>@evt</code>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Webhook Modal -->
@if (showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-broadcast me-2"></i>@(editingWebhook != null ? "Edit" : "Add") Webhook
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name *</label>
                            <input type="text" class="form-control" @bind="newWebhook.Name"
                                placeholder="e.g., Order Notifications" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">URL *</label>
                            <input type="url" class="form-control" @bind="newWebhook.Url"
                                placeholder="https://your-server.com/webhook" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secret (for HMAC signature)</label>
                            <input type="password" class="form-control" @bind="newWebhook.Secret"
                                placeholder="Optional secret key" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Retry Count</label>
                            <input type="number" class="form-control" @bind="newWebhook.RetryCount" min="1" max="10" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Timeout (sec)</label>
                            <input type="number" class="form-control" @bind="newWebhook.TimeoutSeconds" min="5" max="60" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Events *</label>
                            <div class="row">
                                @foreach (var evt in availableEvents)
                                {
                                    <div class="col-md-4 col-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="@evt"
                                                checked="@selectedEvents.Contains(evt)"
                                                @onchange="(e) => ToggleEvent(evt, (bool)(e.Value ?? false))" />
                                            <label class="form-check-label" for="@evt">
                                                <code class="small">@evt</code>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveWebhook" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Save Webhook
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delivery Logs Modal -->
@if (showDeliveriesModal && selectedWebhook != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-list-ul me-2"></i>Delivery Logs: @selectedWebhook.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="() => showDeliveriesModal = false"></button>
                </div>
                <div class="modal-body">
                    @if (deliveries?.Any() == true)
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Event</th>
                                    <th>Status</th>
                                    <th>Response</th>
                                    <th>Duration</th>
                                    <th>Retry</th>
                                    <th>Error</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var delivery in deliveries)
                                {
                                    <tr class="@(delivery.IsSuccess ? "" : "table-danger")">
                                        <td>@delivery.CreatedAt.ToString("dd MMM HH:mm:ss")</td>
                                        <td><code>@delivery.EventType</code></td>
                                        <td>
                                            @if (delivery.IsSuccess)
                                            {
                                                <i class="bi bi-check-circle text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle text-danger"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (delivery.ResponseStatusCode.HasValue)
                                            {
                                                <span class="badge @(delivery.ResponseStatusCode < 300 ? "bg-success" : "bg-danger")">
                                                    @delivery.ResponseStatusCode
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@delivery.DurationMs ms</td>
                                        <td>@delivery.RetryAttempt</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(delivery.ErrorMessage))
                                            {
                                                <span class="text-danger small" title="@delivery.ErrorMessage">
                                                    @TruncateUrl(delivery.ErrorMessage, 30)
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No delivery logs found.</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        @onclick="() => showDeliveriesModal = false">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && webhookToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Delete Webhook</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteModal = false"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this webhook?</p>
                    <p><strong>@webhookToDelete.Name</strong></p>
                    <p class="text-muted small">@webhookToDelete.Url</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteModal = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteWebhook">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<WebhookDto>? webhooks;
    private List<WebhookDeliveryDto>? deliveries;
    private WebhookDto? selectedWebhook;
    private WebhookDto? editingWebhook;
    private WebhookDto? webhookToDelete;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isTesting = false;
    private int? testingWebhookId;
    private bool showCreateModal = false;
    private bool showDeliveriesModal = false;
    private bool showDeleteModal = false;
    private string? errorMessage;

    private CreateWebhookRequest newWebhook = new();
    private List<string> availableEvents = WebhookEvents.All;
    private HashSet<string> selectedEvents = new();

    protected override async Task OnInitializedAsync()
    {
        availableEvents = await WebhookService.GetAvailableEventsAsync();
        await LoadWebhooks();
    }

    private async Task LoadWebhooks()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await WebhookService.GetAllWebhooksAsync();
            if (response != null)
            {
                webhooks = response.Webhooks;
            }
            else
            {
                errorMessage = "Failed to load webhooks.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        editingWebhook = null;
        newWebhook = new CreateWebhookRequest { RetryCount = 3, TimeoutSeconds = 30 };
        selectedEvents.Clear();
        showCreateModal = true;
    }

    private void EditWebhook(WebhookDto webhook)
    {
        editingWebhook = webhook;
        newWebhook = new CreateWebhookRequest
        {
            Name = webhook.Name,
            Url = webhook.Url,
            Events = webhook.Events,
            RetryCount = webhook.RetryCount,
            TimeoutSeconds = webhook.TimeoutSeconds
        };
        selectedEvents = new HashSet<string>(webhook.Events);
        showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
        editingWebhook = null;
        newWebhook = new();
        selectedEvents.Clear();
    }

    private void ToggleEvent(string evt, bool isChecked)
    {
        if (isChecked)
            selectedEvents.Add(evt);
        else
            selectedEvents.Remove(evt);
    }

    private async Task SaveWebhook()
    {
        if (string.IsNullOrEmpty(newWebhook.Name) || string.IsNullOrEmpty(newWebhook.Url) || !selectedEvents.Any())
        {
            return;
        }

        newWebhook.Events = selectedEvents.ToList();
        isSaving = true;

        try
        {
            if (editingWebhook != null)
            {
                var updateRequest = new UpdateWebhookRequest
                {
                    Name = newWebhook.Name,
                    Url = newWebhook.Url,
                    Secret = newWebhook.Secret,
                    Events = newWebhook.Events,
                    RetryCount = newWebhook.RetryCount,
                    TimeoutSeconds = newWebhook.TimeoutSeconds
                };
                var result = await WebhookService.UpdateWebhookAsync(editingWebhook.Id, updateRequest);
                if (result != null)
                {
                    CloseCreateModal();
                    await LoadWebhooks();
                }
            }
            else
            {
                var result = await WebhookService.CreateWebhookAsync(newWebhook);
                if (result != null)
                {
                    CloseCreateModal();
                    await LoadWebhooks();
                }
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ToggleWebhook(WebhookDto webhook)
    {
        await WebhookService.ToggleWebhookAsync(webhook.Id, !webhook.IsActive);
        await LoadWebhooks();
    }

    private async Task TestWebhook(int id)
    {
        isTesting = true;
        testingWebhookId = id;
        try
        {
            await WebhookService.TestWebhookAsync(id);
            await LoadWebhooks();
        }
        finally
        {
            isTesting = false;
            testingWebhookId = null;
        }
    }

    private async Task ShowDeliveries(WebhookDto webhook)
    {
        selectedWebhook = webhook;
        var response = await WebhookService.GetDeliveriesAsync(webhook.Id);
        deliveries = response?.Deliveries;
        showDeliveriesModal = true;
    }

    private void ConfirmDelete(WebhookDto webhook)
    {
        webhookToDelete = webhook;
        showDeleteModal = true;
    }

    private async Task DeleteWebhook()
    {
        if (webhookToDelete == null) return;

        var success = await WebhookService.DeleteWebhookAsync(webhookToDelete.Id);
        if (success)
        {
            showDeleteModal = false;
            webhookToDelete = null;
            await LoadWebhooks();
        }
    }

    private string TruncateUrl(string? text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return "-";
        return text.Length <= maxLength ? text : text.Substring(0, maxLength) + "...";
    }
}