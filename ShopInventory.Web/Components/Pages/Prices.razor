@page "/prices"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IPriceService PriceService
@inject IMasterDataCacheService CacheService
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Prices> Logger
@rendermode InteractiveServer

<PageTitle>Price List - Shop Inventory</PageTitle>

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-tags me-2"></i>Price List</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-filter me-2"></i>Price List Selection & Search</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Select Price List</label>
                    <select class="form-select" @bind="selectedPriceListNum" @bind:after="OnPriceListChanged">
                        <option value="0">-- Select a Price List --</option>
                        @if (priceLists != null)
                        {
                            @foreach (var priceList in priceLists.Where(p => p.IsActive))
                            {
                                <option value="@priceList.ListNum">
                                    @priceList.ListName @(string.IsNullOrEmpty(priceList.Currency) ? "" :
                                    $"({priceList.Currency})")
                                </option>
                            }
                        }
                    </select>
                    @if (isLoadingPriceLists)
                    {
                        <small class="text-muted mt-1 d-block">
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            Loading price lists...
                        </small>
                    }
                </div>
                <div class="col-md-5">
                    <label class="form-label">Search by Item Code or Description</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput"
                            @bind:after="FilterPrices" placeholder="Type to search by code or description..." />
                        @if (!string.IsNullOrWhiteSpace(searchTerm))
                        {
                            <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(searchTerm) && filteredPrices != null)
                    {
                        <small class="text-muted mt-1 d-block">
                            Showing @filteredPrices.Count of @allPricesForList?.Count items
                        </small>
                    }
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-success w-100" @onclick="RefreshPriceLists" disabled="@isLoadingPriceLists">
                        @if (isLoadingPriceLists)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-clockwise me-1"></i>
                        }
                        Refresh
                    </button>
                </div>
            </div>

            @if (selectedPriceList != null)
            {
                <div class="alert alert-info mt-3 mb-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle me-2"></i>
                        <div>
                            <strong>@selectedPriceList.ListName</strong>
                            @if (!string.IsNullOrEmpty(selectedPriceList.Currency))
                            {
                                <span class="badge bg-primary ms-2">@selectedPriceList.Currency</span>
                            }
                            @if (selectedPriceList.Factor.HasValue && selectedPriceList.Factor != 1)
                            {
                                <span class="badge bg-secondary ms-2">Factor:
                                    @selectedPriceList.Factor.Value.ToString("N2")</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading prices for @(selectedPriceList?.ListName ?? "selected list")...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else if (selectedPriceListNum == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Select a price list above to view item prices.
        </div>

        <!-- Show available price lists as cards -->
        @if (priceLists?.Any() == true)
        {
            <div class="row g-4 mt-3">
                @foreach (var priceList in priceLists.Where(p => p.IsActive).OrderBy(p => p.ListNum))
                {
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 cursor-pointer price-list-card" @onclick="() => SelectPriceList(priceList.ListNum)">
                            <div class="card-body text-center">
                                <i class="bi bi-tags fs-1 text-primary mb-2"></i>
                                <h5 class="card-title">@priceList.ListName</h5>
                                <p class="card-text">
                                    @if (!string.IsNullOrEmpty(priceList.Currency))
                                    {
                                        <span class="badge bg-success">@priceList.Currency</span>
                                    }
                                    <span class="badge bg-secondary">List #@priceList.ListNum</span>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0 text-center">
                                <small class="text-muted">Click to view prices</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else if (searchedPrice != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Search Result</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>@searchedPrice.ItemName</h4>
                        <p class="text-muted mb-3">Item Code: <strong>@searchedPrice.ItemCode</strong></p>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success bg-opacity-10">
                            <div class="card-body text-center">
                                <h6 class="text-muted">@(selectedPriceList?.ListName ?? "Price")</h6>
                                <h3 class="text-success mb-0">
                                    @GetCurrencySymbol(selectedPriceList?.Currency)@searchedPrice.Price.ToString("N2")
                                </h3>
                                @if (!string.IsNullOrEmpty(selectedPriceList?.Currency))
                                {
                                    <small class="text-muted">@selectedPriceList.Currency</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (filteredPrices?.Any() == true)
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    @(selectedPriceList?.ListName ?? "Prices")
                    @if (!string.IsNullOrEmpty(selectedPriceList?.Currency))
                    {
                        <span class="badge bg-primary ms-2">@selectedPriceList.Currency</span>
                    }
                </h5>
                <span class="badge bg-primary">@filteredPrices.Count items</span>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                    <table class="table table-hover table-sm">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Item Code</th>
                                <th>Item Name</th>
                                <th class="text-end">Price (@(selectedPriceList?.Currency ?? ""))</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in filteredPrices)
                            {
                                <tr>
                                    <td><strong>@HighlightMatch(item.ItemCode, searchTerm)</strong></td>
                                    <td>@HighlightMatch(item.ItemName, searchTerm)</td>
                                    <td class="text-end">
                                        <span class="text-success fw-bold">
                                            @GetCurrencySymbol(selectedPriceList?.Currency)@item.Price.ToString("N2")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (allPricesForList != null && !string.IsNullOrWhiteSpace(searchTerm))
    {
        <div class="alert alert-warning">
            <i class="bi bi-search me-2"></i>
            No items found matching "<strong>@searchTerm</strong>". Try a different search term.
        </div>
    }
    else if (selectedPriceListNum > 0 && allPricesForList?.Count == 0)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No items found in this price list. The price list may be empty.
        </div>
    }
</div>

<style>
    .price-list-card {
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .price-list-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
</style>

@code {
    private List<PriceListDto>? priceLists;
    private List<ItemPriceByListDto>? allPricesForList;
    private List<ItemPriceByListDto>? filteredPrices;
    private ItemPriceByListDto? searchedPrice;
    private PriceListDto? selectedPriceList;
    private int selectedPriceListNum = 0;
    private bool isLoading = false;
    private bool isLoadingPriceLists = false;
    private string? errorMessage;
    private string? searchTerm;

    protected override async Task OnInitializedAsync()
    {
        await LoadPriceLists();
    }

    private async Task EnsureAuthenticatedAsync()
    {
        await AuthStateProvider.GetAuthenticationStateAsync();
    }

    private async Task LoadPriceLists()
    {
        isLoadingPriceLists = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            await EnsureAuthenticatedAsync();
            var response = await PriceService.GetPriceListsAsync();

            if (response?.PriceLists != null)
            {
                priceLists = response.PriceLists;
                Logger.LogInformation("Loaded {Count} price lists", priceLists.Count);
            }
            else
            {
                errorMessage = "Failed to load price lists.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading price lists");
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoadingPriceLists = false;
        }
    }

    private async Task RefreshPriceLists()
    {
        await LoadPriceLists();
        if (selectedPriceListNum > 0)
        {
            await LoadPricesForList();
        }
    }

    private void SelectPriceList(int listNum)
    {
        selectedPriceListNum = listNum;
        _ = OnPriceListChanged();
    }

    private async Task OnPriceListChanged()
    {
        selectedPriceList = priceLists?.FirstOrDefault(p => p.ListNum == selectedPriceListNum);
        allPricesForList = null;
        filteredPrices = null;
        searchedPrice = null;
        searchTerm = null;
        errorMessage = null;

        if (selectedPriceListNum > 0)
        {
            await LoadPricesForList();
        }
    }

    private async Task LoadPricesForList()
    {
        if (selectedPriceListNum == 0) return;

        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            await EnsureAuthenticatedAsync();
            var response = await PriceService.GetPricesByPriceListAsync(selectedPriceListNum);

            if (response?.Prices != null)
            {
                allPricesForList = response.Prices;
                filteredPrices = allPricesForList.OrderBy(p => p.ItemCode).ToList();
                Logger.LogInformation("Loaded {Count} prices for list {ListNum}", allPricesForList.Count, selectedPriceListNum);
            }
            else
            {
                allPricesForList = new List<ItemPriceByListDto>();
                filteredPrices = new List<ItemPriceByListDto>();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading prices for list {ListNum}", selectedPriceListNum);
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FilterPrices()
    {
        if (allPricesForList == null)
        {
            filteredPrices = null;
            return;
        }

        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredPrices = allPricesForList.OrderBy(p => p.ItemCode).ToList();
            searchedPrice = null;
            return;
        }

        var term = searchTerm.Trim();

        filteredPrices = allPricesForList
        .Where(p =>
        (p.ItemCode != null && p.ItemCode.Contains(term, StringComparison.OrdinalIgnoreCase)) ||
        (p.ItemName != null && p.ItemName.Contains(term, StringComparison.OrdinalIgnoreCase)))
        .OrderBy(p => p.ItemCode)
        .ToList();

        // If exactly one result, show it as the featured search result
        if (filteredPrices.Count == 1)
        {
            searchedPrice = filteredPrices.First();
            filteredPrices = null;
        }
        else
        {
            searchedPrice = null;
        }
    }

    private MarkupString HighlightMatch(string? text, string? search)
    {
        if (string.IsNullOrEmpty(text) || string.IsNullOrWhiteSpace(search))
            return new MarkupString(System.Web.HttpUtility.HtmlEncode(text ?? ""));

        var index = text.IndexOf(search, StringComparison.OrdinalIgnoreCase);
        if (index < 0)
            return new MarkupString(System.Web.HttpUtility.HtmlEncode(text));

        var before = System.Web.HttpUtility.HtmlEncode(text[..index]);
        var match = System.Web.HttpUtility.HtmlEncode(text.Substring(index, search.Length));
        var after = System.Web.HttpUtility.HtmlEncode(text[(index + search.Length)..]);

        return new MarkupString($"{before}<mark class=\"bg-warning px-0\">{match}</mark>{after}");
    }

    private string GetCurrencySymbol(string? currency)
    {
        return currency?.ToUpperInvariant() switch
        {
            "USD" => "$",
            "ZIG" => "ZIG ",
            "EUR" => "€",
            "GBP" => "£",
            "ZAR" => "R",
            _ => ""
        };
    }

    private void ClearSearch()
    {
        searchTerm = null;
        searchedPrice = null;
        filteredPrices = allPricesForList?.OrderBy(p => p.ItemCode).ToList();
        errorMessage = null;
    }
}