@using ShopInventory.Web.Services
@inject IThemeService ThemeService
@inject ILocalizationService L
@inject IJSRuntime JS
@implements IDisposable

<button class="theme-toggle @(isDarkMode ? "dark" : "light") @(isAnimating ? "animating" : "")" @onclick="ToggleTheme"
    title="@(isDarkMode? L.Translate("theme.light") : L.Translate("theme.dark"))" disabled="@isAnimating">
    <div class="theme-icon-wrapper">
        @if (isDarkMode)
        {
            <!-- Sun icon for switching to light mode -->
            <svg class="theme-icon sun-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                viewBox="0 0 16 16">
                <path
                    d="M8 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z" />
            </svg>
        }
        else
        {
            <!-- Moon icon for switching to dark mode -->
            <svg class="theme-icon moon-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                viewBox="0 0 16 16">
                <path
                    d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z" />
            </svg>
        }
    </div>
</button>

<style>
    .theme-icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 22px;
        height: 22px;
    }

    .theme-icon {
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
            opacity 0.3s ease;
    }

    .theme-toggle.animating .theme-icon {
        animation: iconSpin 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .sun-icon {
        color: #fbbf24;
    }

    .moon-icon {
        color: #6366f1;
    }

    .dark-theme .moon-icon,
    .dark .moon-icon {
        color: #818cf8;
    }

    @@keyframes iconSpin {
        0% {
            transform: rotate(0deg) scale(1);
            opacity: 1;
        }

        50% {
            transform: rotate(180deg) scale(0.8);
            opacity: 0.5;
        }

        100% {
            transform: rotate(360deg) scale(1);
            opacity: 1;
        }
    }
</style>

@code {
    private bool isDarkMode;
    private bool isAnimating;

    protected override async Task OnInitializedAsync()
    {
        var theme = await ThemeService.GetThemeAsync();
        isDarkMode = theme == "dark";
        ThemeService.OnThemeChanged += OnThemeChanged;

        // Initialize theme via JS (no animation on load)
        try
        {
            await JS.InvokeVoidAsync("themeManager.initTheme", theme);
        }
        catch
        {
            // JS interop may fail during prerendering
        }
    }

    private async void OnThemeChanged()
    {
        isDarkMode = ThemeService.IsDarkMode;
        await InvokeAsync(StateHasChanged);
    }

    private async Task ToggleTheme()
    {
        if (isAnimating) return;

        isAnimating = true;
        StateHasChanged();

        // Apply theme via JS with animation
        var newTheme = isDarkMode ? "light" : "dark";
        try
        {
            await JS.InvokeVoidAsync("themeManager.setTheme", newTheme, true);
        }
        catch
        {
            // JS interop may fail
        }

        // Toggle the theme in service
        await ThemeService.ToggleThemeAsync();

        // Reset animation state after animation completes
        await Task.Delay(400);
        isAnimating = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeChanged;
    }
}